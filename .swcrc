{
  "env": {
    "coreJs": 3
  },
  "exclude": [
    ".*.js$",
    ".*.map$"
  ],
  "sourceMaps": true,
  "jsc": {
    "parser": {
      "syntax": "typescript",
      "tsx": true,
      "decorators": false,
      "dynamicImport": false
    },
    "transform": {
      "react": {
        "throwIfNamespace": true,
        "development": false,
        "refresh": true
      },
      "optimizer": {
        "globals": {
          "vars": {
            "__DEBUG__": "true"
          }
        }
      }
    }
  }
}
